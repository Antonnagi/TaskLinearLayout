<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TaskLinearLayout" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/background</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
       
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="circle">
        <item name="cornerSize">10dp</item>
    </style>
    <style name="margin">
        <item name="android:layout_marginEnd">@dimen/marginTitle</item>
        <item name="android:layout_marginTop">@dimen/marginTitle</item>
        <item name="android:textSize">@dimen/textSizeJob</item>
    </style>
    <style name="margin.lastLinear">
        <item name="android:layout_gravity">end</item>
    </style>
    <style name="margin.lastLinear.nation">
        <item name="android:fontFamily">@font/dm_sans_med</item>
        <item name="android:textColor">@color/written</item>
    </style>
    <style name="margin.lastLinear.hour">
        <item name="android:fontFamily">@font/dm_sans_light</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="title">
        <item name="android:layout_marginStart">@dimen/marginTitle</item>
        <item name="android:layout_marginTop">@dimen/marginTitle</item>
        <item name="android:textSize">@dimen/textSizeTitle</item>
        <item name="android:fontFamily">@font/dm_sans_med</item>
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="job">
        <item name="android:layout_marginStart">@dimen/marginJob</item>
        <item name="android:layout_marginTop">@dimen/marginJob</item>
        <item name="android:textSize">@dimen/textSizeJob</item>
        <item name="android:fontFamily">@font/dm_sans_light</item>
        <item name="android:textColor">@color/written</item>
    </style>

</resources>