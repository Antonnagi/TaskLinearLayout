<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="117dp"
        android:orientation="horizontal"
        android:layout_margin="@dimen/marginHome"
        android:background="@color/background"
        >
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="93dp"
            android:layout_height="93dp"
            android:src="@drawable/unsplash"
            android:layout_margin="@dimen/marginImage"
            app:shapeAppearanceOverlay="@style/circle"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ahmed_hassan"
                android:textStyle="bold"
                style="@style/title"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/marginJob"
                android:layout_marginTop="@dimen/marginJob"
                android:text="@string/engineer"
                style="@style/job"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/marginJob"
                android:layout_marginStart="@dimen/locationM"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_marginTop="@dimen/mLocation"
                    android:src="@drawable/baseline_location_on_24"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/uk"
                    android:textSize="@dimen/UKsize"
                    android:fontFamily="@font/dm_sans_light"
                    android:textColor="@color/written2"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginJob"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_150_reviews"
                    android:textSize="@dimen/reviewSize"
                    android:textColor="@color/black"
                    android:fontFamily="@font/dm_sans_light"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_4_5"
                    android:textSize="@dimen/reviewSize"
                    android:textColor="@color/black"
                    android:fontFamily="@font/dm_sans_light"
                    android:layout_marginStart="@dimen/marginJob"
                    />
                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="16dp"
                    android:layout_marginTop="@dimen/mLocation"
                    android:src="@drawable/baseline_star_24"
                    android:layout_gravity="clip_horizontal"
                    android:layout_marginStart="@dimen/locationM"

                    />

            </LinearLayout>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="right"
            >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_3_hr"
                    android:background="@drawable/hour"
                    android:paddingHorizontal="@dimen/paddHour"
                    android:paddingVertical="@dimen/paddHourV"
                    style="@style/margin.lastLinear.hour"
                    />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/russian"
                style="@style/margin.lastLinear.nation"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_5_days_ago"
                style="@style/margin.lastLinear"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>